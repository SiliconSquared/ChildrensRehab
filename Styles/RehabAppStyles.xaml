<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    x:Class="RehabKiosk.RehabKioskResourceClass"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RehabKiosk"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:controls="clr-namespace:RehabKiosk.Controls"
                    xmlns:converters="clr-namespace:RehabKiosk.Converters"
                    xmlns:ctrls="clr-namespace:RehabKiosk.Controls"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">



    <sys:Double x:Key="LEDPixelDiameter">17</sys:Double>
    
    <GridLength x:Key="BurgerBarCollapsedWidth">45</GridLength>
    <sys:Double x:Key="BurgerBarCollapsedWidthF">45</sys:Double>
    <GridLength x:Key="BurgerBarExpandedWidth">190</GridLength>
    <sys:Double x:Key="BurgerBarExpandedWidthF">190</sys:Double>

    <Duration x:Key="ContentFlyoutDuration">0:0:0.5</Duration>
    <KeyTime x:Key="ContentFlyoutEndKeyTime">0:0:0.5</KeyTime>

    <Duration x:Key="ContentFlyinDuration">0:0:0.75</Duration>

    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:ModeToVisibilityConverter x:Key="ModeToVisibilityConverter" />
    <converters:ByteArrayToBitmapImageConverter x:Key="ByteArrayToBitmapImageConverter" />
    <converters:ListViewIndexConverter x:Key="ListViewIndexConverter" />
    <converters:DoubleInflatorConverter x:Key="DoubleInflatorConverter" />
    <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />
    <converters:TrueFalseBrushConverter x:Key="AppBarActiveBrushConverter" TrueBrush="{StaticResource TitlebarForegroundActive}" FalseBrush="{StaticResource TitlebarForegroundInactive}"/>
    <converters:TrueFalseBrushConverter x:Key="AppBorderActiveBrushConverter" TrueBrush="{StaticResource ApplicationBorderActive}" FalseBrush="{StaticResource ApplicationBorderInactive}"/>
    <converters:TrueFalseBrushConverter x:Key="AppObjectForegroundActiveBrushConverter" TrueBrush="{StaticResource AppObjectForegroundActive}" FalseBrush="{StaticResource AppObjectForegroundInactive}"/>

    <SolidColorBrush x:Key="SimpleCircularButtonBackgroundThemeBrush" Color="LightGray" />

    <Style x:Key="BurgerBarButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="{StaticResource BurgerBarExpandedWidthF}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource BurgerBarForeground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid" Background="{StaticResource BurgerBarBackground}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource BurgerBarCollapsedWidth}" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Viewbox Grid.Column="0" Width="24" Height="24" HorizontalAlignment="Center" Margin="0,0,0,0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="{TemplateBinding ctrls:ButtonAttachedBehavior.Glyph}" Foreground="{TemplateBinding ctrls:ButtonAttachedBehavior.GlyphForeground}"/>
                                </Viewbox>

                                <Viewbox Grid.Column="0" Width="24" Height="24" HorizontalAlignment="Center" Margin="0,0,0,0">
                                    <ContentControl Template="{TemplateBinding ctrls:ButtonAttachedBehavior.GlyphContent}"/>
                                </Viewbox>

                                <TextBlock Grid.Column="1" FontFamily="Segoe UI" Text="{TemplateBinding ctrls:ButtonAttachedBehavior.Label}" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                                <Rectangle x:Name="FocusVisualWhite" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="1.5" StrokeEndLineCap="Square" Stroke="White" StrokeDashArray="1,1" Margin="3"/>
                                <Rectangle x:Name="FocusVisualBlack" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="0.5" StrokeEndLineCap="Square" Stroke="Black" StrokeDashArray="1,1" Width="{Binding ElementName=RootGrid, Path=ActualWidth}" Height="{Binding ElementName=RootGrid, Path=ActualHeight}" Margin="3"/>
                            </Grid>
                        </StackPanel>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Opacity">
                                            <DiscreteDoubleKeyFrame KeyTime="0" Value="0.7"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Opacity">
                                            <DiscreteDoubleKeyFrame KeyTime="0" Value="0.5"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="0.25" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="RootGrid" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="FocusVisualWhite" Storyboard.TargetProperty="Opacity"/>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="FocusVisualBlack" Storyboard.TargetProperty="Opacity"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="PointerFocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="controls:ButtonAttachedBehavior.SelectionToggle" Value="True">
                            <Setter TargetName="RootGrid" Property="Background" Value="{StaticResource BurgerBarButtonSelectedBackground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="FilterToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="controls:CircularButtonFillAttachedProperty.CircularButtonFill" Value="{StaticResource CircularButtonBackground}"/>
        <Setter Property="controls:ButtonAttachedBehavior.HighlightFillClipRadius" Value="28"/>
        <Setter Property="controls:ButtonAttachedBehavior.CenterPoint" Value="14,14"/>
        <Setter Property="controls:ButtonAttachedBehavior.GlyphMargin" Value="0,0,0,0"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid x:Name="grid" Background="{TemplateBinding Background}" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{TemplateBinding Width}"/>
                        </Grid.RowDefinitions>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="0.7" Storyboard.TargetName="ButtonVisualRoot" Storyboard.TargetProperty="Opacity"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="Disabled"/>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="FocusVisualWhite" Storyboard.TargetProperty="Opacity"/>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="FocusVisualBlack" Storyboard.TargetProperty="Opacity"/>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="RectFocusVisualWhite" Storyboard.TargetProperty="Opacity"/>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="RectFocusVisualBlack" Storyboard.TargetProperty="Opacity"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused"/>
                                <VisualState x:Name="PointerFocused"/>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="CheckStates">
                                <VisualState x:Name="Checked">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="circButtonHighlight" Storyboard.TargetProperty="Opacity" To="0.75" Duration="0:0:0.5" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unchecked">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="circButtonHighlight" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.5" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid x:Name="ButtonVisualRoot" Grid.Column="0" Grid.Row="0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Margin="0" HorizontalAlignment="Right">
                            <Ellipse Stroke="{TemplateBinding Foreground}" StrokeThickness="0" Fill="{TemplateBinding controls:CircularButtonFillAttachedProperty.CircularButtonFill}"/>
                            <Ellipse x:Name="circButtonHighlight" Stroke="{TemplateBinding Foreground}" StrokeThickness="3" Fill="Aqua" 
                                     Opacity="0" ClipToBounds="False"
                                     Margin="{TemplateBinding controls:ButtonAttachedBehavior.HighlightMargin}">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="15" />
                                </Ellipse.Effect>
                                <Ellipse.Clip>
                                    <EllipseGeometry Center="{Binding Path=(controls:ButtonAttachedBehavior.CenterPoint), RelativeSource={RelativeSource TemplatedParent}}" RadiusX="{Binding Path=(controls:ButtonAttachedBehavior.HighlightFillClipRadius), RelativeSource={RelativeSource TemplatedParent}}"
                                                                    RadiusY="{Binding Path=(controls:ButtonAttachedBehavior.HighlightFillClipRadius), RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Ellipse.Clip>
                            </Ellipse>

                            <Ellipse x:Name="circButton" Stroke="{TemplateBinding Foreground}" StrokeThickness="0" Fill="Transparent"/>
                            <ContentPresenter TextBlock.FontSize="{TemplateBinding FontSize}" TextBlock.FontFamily="{TemplateBinding FontFamily}" 
                                              VerticalAlignment="Center" HorizontalAlignment="Center" 
                                              TextBlock.Foreground="{TemplateBinding Foreground}"
                                              Margin="{TemplateBinding controls:ButtonAttachedBehavior.GlyphMargin}"/>
                            <Ellipse x:Name="FocusVisualWhite" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="1.5" StrokeEndLineCap="Square" Stroke="White" StrokeDashArray="1,1" Visibility="{Binding Path=(controls:ButtonAttachedBehavior.UseSquareFocus), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='True'}"/>
                            <Ellipse x:Name="FocusVisualBlack" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="0.5" StrokeEndLineCap="Square" Stroke="Black" StrokeDashArray="1,1" Visibility="{Binding Path=(controls:ButtonAttachedBehavior.UseSquareFocus), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='True'}"/>
                            <Rectangle x:Name="RectFocusVisualWhite" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="1.5" StrokeEndLineCap="Square" Stroke="White" StrokeDashArray="1,1" Visibility="{Binding Path=(controls:ButtonAttachedBehavior.UseSquareFocus), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='False'}"/>
                            <Rectangle x:Name="RectFocusVisualBlack" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="0.5" StrokeEndLineCap="Square" Stroke="Black" StrokeDashArray="1,1" Visibility="{Binding Path=(controls:ButtonAttachedBehavior.UseSquareFocus), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='False'}"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="IconAndTextButtonStyle" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="{StaticResource HubPageButtonForeground}"/>
        <Setter Property="ctrls:ButtonAttachedBehavior.GlyphForeground" Value="{StaticResource HubPageButtonForeground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid" Background="Transparent">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="26" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Viewbox Grid.Column="0" Width="18" Height="18" HorizontalAlignment="Center">
                                    <TextBlock x:Name="PART_ButtonTextGlyph" FontFamily="Segoe MDL2 Assets" Text="{TemplateBinding ctrls:ButtonAttachedBehavior.Glyph}" Foreground="{TemplateBinding ctrls:ButtonAttachedBehavior.GlyphForeground}"/>
                                </Viewbox>

                                <Viewbox Grid.Column="0" Width="24" Height="24" HorizontalAlignment="Center">
                                    <ContentControl Template="{TemplateBinding ctrls:ButtonAttachedBehavior.GlyphContent}"/>
                                </Viewbox>

                                <TextBlock x:Name="PART_ButtonLabel" Grid.Column="2" FontFamily="Segoe UI" FontSize="{TemplateBinding FontSize}" Text="{TemplateBinding ctrls:ButtonAttachedBehavior.Label}" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                                <Rectangle x:Name="FocusVisualWhite" Grid.ColumnSpan="3" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="1.5" StrokeEndLineCap="Square" Stroke="White" StrokeDashArray="1,1" Width="{Binding ElementName=RootGrid, Path=ActualWidth}" Height="{Binding ElementName=RootGrid, Path=ActualHeight}"/>
                                <Rectangle x:Name="FocusVisualBlack" Grid.ColumnSpan="3" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="0.5" StrokeEndLineCap="Square" Stroke="Black" StrokeDashArray="1,1" Width="{Binding ElementName=RootGrid, Path=ActualWidth}" Height="{Binding ElementName=RootGrid, Path=ActualHeight}"/>
                            </Grid>
                        </StackPanel>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.1" To="0.7" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="PART_ButtonTextGlyph" />
                                        <DoubleAnimation Duration="0:0:0.1" To="0.7" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="PART_ButtonLabel" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.1" To="0.4" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="PART_ButtonTextGlyph" />
                                        <DoubleAnimation Duration="0:0:0.1" To="0.4" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="PART_ButtonLabel" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="0.25" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="RootGrid" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="FocusVisualWhite" Storyboard.TargetProperty="Opacity"/>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetName="FocusVisualBlack" Storyboard.TargetProperty="Opacity"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="PointerFocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <Style x:Key="OvalIconAndTextButtonStyle" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="#4C4C4C"/>
        <Setter Property="Foreground" Value="{StaticResource HubPageButtonForeground}"/>
        <Setter Property="controls:ButtonAttachedBehavior.GlyphForeground" Value="White"/>
        <Setter Property="controls:ButtonAttachedBehavior.LabelMargin" Value="0,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid" >
