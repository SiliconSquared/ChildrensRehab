                                            <EasingColorKeyFrame KeyTime="0" Value="#3B3B3B" />
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected" />
                                <VisualState x:Name="Selected"/>

                                <VisualState x:Name="SelectedUnfocused">
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton FontSize="14" Width="20" Height="20" Style="{StaticResource CircularToggleButtonStyle}"
                                          ctrls:ButtonAttachedBehavior.HighlightFillClipRadius="10"
                                          ctrls:ButtonAttachedBehavior.CenterPoint="10,10"
                                          Foreground="White" Background="Transparent" 
                                          ctrls:CircularButtonFillAttachedProperty.CircularButtonFill="#5B5B5B" 
                                          VerticalAlignment="Top" 
                                          IsChecked="{Binding Show, Mode=TwoWay}" 
                                          Command="{Binding ShowOperation}" CommandParameter="{Binding}"
                                          Visibility="{Binding IsNewLayerType, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='True'}" >
                                <ToggleButton.Content>
                                    <Viewbox HorizontalAlignment="Center" Margin="2">
                                        <ContentControl Template="{StaticResource PreviewEye}" Foreground="White" />
                                    </Viewbox>
                                </ToggleButton.Content>
                            </ToggleButton>

                            <StackPanel Grid.Column="1" Opacity="0.4" Grid.ColumnSpan="3"
                                        Background="{Binding Active, Converter={StaticResource EnumToColorConverter}, ConverterParameter='True,Aqua;False,Transparent'}"/>
                            <StackPanel Grid.Column="1">
                                <ctrls:EditableTextBlock Margin="2,0,2,0" MaxLength="20"
                                                         Foreground="{StaticResource ApplicationForegroundObject}"
                                                         IsInEditMode="{Binding EditModeEnabled, Mode=TwoWay}"
                                                         EditModeChangeNotificationCommand="{Binding EditOperationEditLayerNameModeNotification}"
                                                         Text="{Binding LayerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <Button Grid.Column="2"                                    
                                    Width="20" Height="20" HorizontalAlignment="Right"
                                    Style="{StaticResource SmallGlyphButtonStyle}" 
                                    Foreground="White" Background="Transparent" 
                                    ctrls:CircularButtonFillAttachedProperty.CircularButtonFill="#2A2828" 
                                    FontFamily="Segoe MDL2 Assets" FontSize="10" Content="&#xE104;" 
                                    Command="{Binding EditOperation}" CommandParameter="{Binding}"/>

                            <Button Grid.Column="3"
                                    Visibility="{Binding ElementName=classRoot, Path=IsLayerDeletable, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Width="20" Height="20" HorizontalAlignment="Right"
                                    Style="{StaticResource SmallGlyphButtonStyle}" 
                                    Foreground="White" Background="Transparent" 
                                    ctrls:CircularButtonFillAttachedProperty.CircularButtonFill="#2A2828" 
                                    FontFamily="Segoe MDL2 Assets" FontSize="10" Content="&#xE947;" 
                                    Command="{Binding PerformOperation}" CommandParameter="{Binding}"/>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>